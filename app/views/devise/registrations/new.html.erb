<div class="background_img_signin">
<div class="login">

  <div> <img class="logo" src="/assets/atto.PNG"> </div><br>

<h3>アカウント作成</h3>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "お名前", :size=>"37" %>
  </div><br>

  <!-- <div class="field">
    <%#= f.label :email %><br>
    <%#= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div> -->

  <div class="field">
   <!--  <%#= f.label :password %>
    <%# if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <%# end %><br> -->
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード（４文字以上）", :size=>"37" %>
  </div>

  <div class="field">
   <!--  <%#= f.label :password_confirmation %><br> -->
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード（確認のため再度ご入力ください）", :size=>"37" %>
  </div><br>

  <div class="actions">
    <%= f.submit "登録", class:"btn btn-danger" %>
  </div><br>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>